<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Template.View.LoginPage"
             xmlns:viewmodel="clr-namespace:MAUI_Template.ViewModel"
             x:DataType="viewmodel:LoginViewModel"
             Title="{Binding Title}">
    <Grid Padding="30,0"
          BackgroundColor="{StaticResource DarkBackground}">
        <Frame HeightRequest="460"
               Style="{StaticResource CardView}">
            <VerticalStackLayout Padding="30,0"
                                 VerticalOptions="Center"
                                 Spacing="10">
                <Image Source="user_gray.png"
                       Style="{StaticResource CardView}"
                       Margin="0,0,0,20"
                       HeightRequest="100" />
                <Frame HeightRequest="45"
                       Padding="10,0">
                    <Entry Placeholder="Username"
                           VerticalOptions="Center"
                           FontSize="18"
                           Text="{Binding Username}" />
                </Frame>
                <Frame HeightRequest="45"
                       Padding="10,0">
                    <Entry Placeholder="Password"
                           VerticalOptions="Center"
                           FontSize="18"
                           IsPassword="False"
                           Text="{Binding Password}" />
                </Frame>
                <Button Text="LOGIN"
                        FontSize="16"
                        Margin="0,20,0,0"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsNotBusy}" />
                <Button Text="REGISTER"
                        FontSize="16"
                        Margin="0,0,0,0"
                        Style="{StaticResource ButtonTertiary}"
                        Command="{Binding CreateUserCommand}"
                        IsEnabled="{Binding IsNotBusy}" />
            </VerticalStackLayout>
        </Frame>
        
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"
                           HorizontalOptions="FillAndExpand"
                           Color="{StaticResource Primary}"
                           VerticalOptions="CenterAndExpand" />
    </Grid>
</ContentPage>